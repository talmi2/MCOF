@model MyCupOverflows.Models.User

@{
    ViewBag.Title = "Index";
}

<div class="row justify-content-md-start">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Welcome
            </div>
            <div class="card-body">
                @if (Session["Username"] != null)
                {
                    <p>Username: @Session["Username"].ToString()</p>
                    <p>Email: @Session["Email"].ToString()</p>
                    <a href="@Url.Action("Logout","Login")" class="btn btn-warning">Logout</a>
                }
            </div>
        </div>

    </div>
</div>